@{
    ViewData["Title"] = "Home";
}

@model NIDashboard.Models.Home.HomeIndexModel

    <div class="container body-content">
        <div class="row frontPageContent">
            <h1 class="display-4">Latest Announcements</h1>
            <table class="table table-hover" id="latestPostsTable">
                <tbody>
                    @foreach (var post in Model.LatestPosts)
                    {
                        <tr>
                            <td>
                                <a class="text-decoration-none" asp-controller="Post" asp-action="Index" asp-route-id=@post.Id>
                                    <div class="row">
                                        <div class="col-auto postTitle">
                                            @post.Title
                                        </div>
                                        <div class="badge badge-pill badge-primary col-auto align-self-center">
                                            @post.Section.Title
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class=" col-auto postSubTitle">
                                            Posted by @post.AuthorName
                                        </div>
                                        <div class="postSubTitle">
                                            @post.DatePosted
                                        </div>
                                    </div>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
